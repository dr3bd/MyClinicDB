{
  "name": "@myclinicdb/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm:renderer\" \"npm run electron:dev\"",
    "renderer": "vite --config vite.config.ts",
    "electron:dev": "wait-on tcp:5174 && electron .",
    "build": "vite build --config vite.config.ts && tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@myclinicdb/core": "0.1.0",
    "@myclinicdb/ui": "0.1.0",
    "electron": "28.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "20.11.17",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "8.2.2",
    "electron-builder": "24.9.1",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "wait-on": "7.1.0"
  },
  "build": {
    "appId": "com.myclinicdb.desktop",
    "files": [
      {
        "from": "dist/main",
        "to": "main"
      },
      {
        "from": "../../dist/desktop-renderer",
        "to": "renderer"
      }
    ]
  }
}
